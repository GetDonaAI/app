{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/src/*": ["./src/*"],
      "@/src/components/*": ["./src/components/*"],
      "@/src/hooks/*": ["./src/hooks/*"],
      "@/src/services/*": ["./src/services/*"],
      "@/src/utils/*": ["./src/utils/*"],
      "@/src/constants/*": ["./src/constants/*"],
      "@/src/types/*": ["./src/types/*"],
      "@/src/assets/*": ["./src/assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
